{
  "image": "mcr.microsoft.com/devcontainers/java",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": "false",
			"installGradle": "false"
		}
	},
	"postCreateCommand": "./gradlew build",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.java",
				"vscjava.vscode-java-test",
				"vscjava.vscode-java-debug",
				"vscjava.vscode-gradle"
			]
		}
	}
}
