{
	"image": "lmerynda/knightofdarkness-devcontainer:latest",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": "false",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/mikaello/devcontainer-features/modern-shell-utils:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"configureZshAsDefaultShell": true
		}
	},
	"mounts": [
		"source=${localEnv:USERPROFILE}/.gitconfig,target=/home/root/.gitconfig,type=bind,consistency=cached",
		"type=bind,source=${localWorkspaceFolder},target=/workspaces"
	],
	"remoteUser": "${env:USERNAME}",
	"workspaceFolder": "/workspaces",
	"forwardPorts": [8080],
	"postCreateCommand": "./backend/gradlew -p ./backend build --exclude-task test",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.java",
				"vscjava.vscode-java-test",
				"vscjava.vscode-java-debug",
				"vscjava.vscode-gradle",
				"mhutchie.git-graph",
				"eamodio.gitlens",
				"humao.rest-client",
				"alefragnani.Bookmarks"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh"
			}
		}
	}
}